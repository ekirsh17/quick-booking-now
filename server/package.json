{
  "name": "quick-booking-now-server",
  "version": "1.0.0",
  "description": "Node/Express backend server for SMS intake",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "echo \"Error: no test specified\" && exit 1",
    "validate:env": "node ../scripts/validate-env.js --backend",
    "predev": "node -e \"process.env.ALLOW_MINIMAL_BACKEND='true';require('child_process').execSync('npm run validate:env',{stdio:'inherit'})\"",
    "prebuild": "node -e \"if(process.env.RAILWAY_ENVIRONMENT||process.env.RAILWAY_PROJECT_ID){process.exit(0)}else{require('child_process').execSync('npm run validate:env',{stdio:'inherit'})}\"",
    "prestart": "node -e \"if(process.env.RAILWAY_ENVIRONMENT||process.env.RAILWAY_PROJECT_ID){process.exit(0)}else{require('child_process').execSync('npm run validate:env',{stdio:'inherit'})}\""
  },
  "keywords": [
    "sms",
    "twilio",
    "openai",
    "supabase",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@paypal/paypal-server-sdk": "^2.0.0",
    "@supabase/supabase-js": "^2.76.1",
    "express": "^4.18.2",
    "openai": "^4.20.1",
    "stripe": "^20.0.0",
    "twilio": "^4.19.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.16.5",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3"
  }
}
